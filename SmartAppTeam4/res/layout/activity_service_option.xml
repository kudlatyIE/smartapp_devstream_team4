<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    	<LinearLayout 
        android:id="@+id/serviceoptions_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
    	    >
    	    
    	    <Button 
    	        android:id="@+id/serviceoption_btn_back"
           	    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_back"   
            	android:layout_weight="1"
    	        />
    	    
    	        <TextView
           			 android:id="@+id/serviceoptions_text_head"
            		 android:layout_width="wrap_content"
            		 android:layout_height="wrap_content"
            		 android:gravity="center"
           			 android:text="@string/title_activity_service_options"
            		 android:textSize="18sp"
            		 android:layout_weight="5" 
        		/>
    	       	    
    	</LinearLayout>
    	
	<LinearLayout 
	    android:id="@+id/serviceoptions_center"
	    android:layout_below="@+id/serviceoptions_top"
	    android:layout_above="@+id/serviceoptions_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:orientation="vertical"	    
	    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/service_optiontext" />
        />

    <ListView
        android:id="@+id/serviceoption_listview_listserviceoptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
    </LinearLayout>
    
    	<LinearLayout 
       		 android:id="@+id/serviceoptions_bottom"       
         	 android:layout_alignParentBottom="true"
       		 android:layout_width="match_parent"
       	 	 android:layout_height="wrap_content"
        	 android:layout_margin="5dp"
        	 android:orientation="horizontal"
        	 android:layout_gravity="bottom"
    	     >
    	        
    	        <Button 
    	       		 android:id="@+id/serviceoption_btn_home"
    	        	 android:layout_width="wrap_content"
    	        	 android:layout_height="wrap_content"
    	        	 android:gravity="center"
            		 android:text="@string/btn_home"
            		 android:layout_weight="1"
    	        	 />
    	        
    	        <Button 
    	       		 android:id="@+id/serviceoption_btn_book"
    	        	 android:layout_width="wrap_content"
    	        	 android:layout_height="wrap_content"
    	        	 android:gravity="center"
            	     android:text="@string/btn_book"
            		 android:layout_weight="1"
    	       		 />
        
    	</LinearLayout>

</RelativeLayout>
