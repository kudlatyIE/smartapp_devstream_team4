<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/findserviceuser_adapter_text_match_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="@dimen/margin_small"
        android:text="100%"
        />
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView 
        	android:id="@+id/findserviceuser_adapter_text_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_margin="@dimen/margin_small"
        	android:text="@string/user_name_tmp"
        />
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:id="@+id/findserviceuser_adapter_text_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/serviceuser_dob_tmp"
                />
            <TextView 
                android:id="@+id/findserviceuser_adapter_text_hospital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/hospital_number_tmp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
