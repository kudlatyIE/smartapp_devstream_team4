<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smart_layout_footer_clinicdates"       
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    >
    
    <Button 
        android:id="@+id/footer_clinicdates_btn_calendar"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="end"
        	android:text="@string/btn_calendar"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
         <Button 
    	 	android:id="@+id/footer_clinicdates_btn_home"
    	 	android:layout_width="wrap_content"
    	 	android:layout_height="wrap_content"
    	 	android:gravity="center"
         	android:text="@string/btn_home"
         	android:layout_weight="1"
    	 />
    	        
   		<Button 
    	 	android:id="@+id/footer_clinicdates_btn_book"
    	 	android:layout_width="wrap_content"
    	 	android:layout_height="wrap_content"
    	 	android:gravity="center"
         	android:text="@string/btn_book"
         	android:layout_weight="1"
    	 />
        
    </LinearLayout>	        

</LinearLayout>
